<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".debug.DebugActivity">

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload" />

    <Button
        android:id="@+id/btn_show_temperature"
        android:layout_below="@id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示温度" />

    <Button
        android:id="@+id/btn_debug"
        android:layout_below="@id/btn_show_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debug模式" />

    <Button
        android:id="@+id/btn_light_switch"
        android:layout_below="@id/btn_show_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示灯开关" />

    <Button
        android:id="@+id/btn_multi_box"
        android:layout_below="@id/btn_light_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多选框" />

    <Button
        android:id="@+id/btn_shutdown"
        android:layout_below="@id/btn_multi_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关机" />

</RelativeLayout>