<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <com.hitqz.robot.watchtower.widget.CommonTitleBar
        android:id="@+id/camera_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.hitqz.robot.watchtower.widget.CommonTitleBar>

    <SurfaceView
        android:id="@+id/Sur_Player"
        android:layout_width="480dp"
        android:layout_height="270dp"
        android:layout_below="@id/camera_title_bar"
        android:background="#0000ff00" />

    <com.hitqz.robot.watchtower.camera.ProductionView
        android:id="@+id/pv_camera"
        android:layout_width="480dp"
        android:layout_height="270dp"
        android:layout_below="@id/camera_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/camera_title_bar"
        android:layout_toRightOf="@id/Sur_Player"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textColor="#ff000000"
                android:typeface="sans" />

        </LinearLayout>

        <com.hitqz.robot.commonlib.view.SteerView
            android:id="@+id/azimuth_circle"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="circlePressed"
            app:bottomImg="@drawable/icon_arrow_down_orange"
            app:leftImg="@drawable/icon_arrow_left_orange"
            app:ovalColor="@color/circleColor"
            app:pressColor="@color/pressColor"
            app:rightImg="@drawable/icon_arrow_right_orange"
            app:topImg="@drawable/icon_arrow_up_orange">

        </com.hitqz.robot.commonlib.view.SteerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hitqz.robot.commonlib.view.RCImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/camera_plus_selector"
                app:round_corner="15dp" />

            <com.hitqz.robot.commonlib.view.RCRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/camera_focus_selector"
                android:clickable="true"
                app:clip_background="true"
                app:round_corner="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="聚焦"
                    android:textColor="@android:color/black"
                    android:textSize="30dp" />
            </com.hitqz.robot.commonlib.view.RCRelativeLayout>

            <com.hitqz.robot.commonlib.view.RCImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/camera_plus_selector"
                app:round_corner="15dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>